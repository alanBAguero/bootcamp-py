<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<hr>

<div class="action-links">
  <%= link_to 'Atras', root_path %>
  <div class="object-links">
    <%= link_to 'Nuevo Post', new_post_path %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Titulo</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td>
          <%= link_to post do %>
            <span class="material-icons">visibility</span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_post_path(post) do %>
            <span class="material-icons">mode_edit</span>
          <% end %>
        </td>
        <td>
          <%= link_to post, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } do %>
            <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

